<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.myapplication.MainActivity">



    <LinearLayout
        android:id="@+id/off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/marginR">
        <Button
            android:id="@+id/btn_off"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="Off" />
        <Button
            android:id="@+id/btn_div"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="/" />
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="-"/>
        <Button
            android:id="@+id/btn_multi"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="*" />
        <Button
            android:id="@+id/btn_equal"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:text="=" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/on"
        android:layout_toLeftOf="@+id/off"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_on"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="On"/>
        <Button
            android:id="@+id/btn_mplus"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="M+"/>
        <Button
            android:id="@+id/btn_9"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="9" />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="6" />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="3"/>
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:text="+"/>
    </LinearLayout>


    <GridLayout
        android:layout_toLeftOf="@+id/on"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="5"
        android:columnCount="3">

        <Button
            android:id="@+id/btn_mc"
            android:text="MC"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_1onx"
            android:text="1/x"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_percent"
            android:text="%"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_pow"
            android:text="^"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_ac"
            android:text="AC"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_mr"
            android:text="MR"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_mmius"
            android:text="M-"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:layout_width="@dimen/btn_width"/>
        <Button
            android:id="@+id/btn_dot"
            android:text="."
            android:layout_width="@dimen/btn_width"/>
    </GridLayout>


    <EditText
        android:id="@+id/edt_text"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        />
</RelativeLayout>
